<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:new="clr-namespace:BetaSharp.Launcher.New"

             x:Class="BetaSharp.Launcher.New.NewView" x:DataType="new:NewViewModel">

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="AttachedToVisualTree">
            <InvokeCommandAction Command="{Binding InitializeCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <!-- ReSharper disable once Xaml.StyleClassNotFound -->
        <Button Content="{CompiledBinding Message}" Classes="accent" Command="{CompiledBinding AuthenticateCommand}"
                HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                ToolTip.Tip="A Web browser tab may be opened" />

        <TextBlock Text="You must own a legitimate copy of Minecraft Java edition to use this client" Opacity="0.5" />
    </StackPanel>
</UserControl>
